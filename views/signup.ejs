<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener - Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background-color: #f8f9fa;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .signup-container {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        width: 100%;
        max-width: 400px;
      }
      .brand {
        color: #0d6efd;
        margin-bottom: 2rem;
        text-align: center;
      }
      .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
        border-color: #86b7fe;
      }
      .login-link {
        text-align: center;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="signup-container">
      <h1 class="brand">ðŸ”— URL Shortener</h1>
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <form action="/user" method="POST">
        <div class="mb-3">
          <label class="form-label">Full Name</label>
          <input type="text" class="form-control" name="name" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Email address</label>
          <input type="email" class="form-control" name="email" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password" required>
          <div id="password-strength" style="height: 5px; background: #eee; margin-top: 5px;">
            <div id="strength-bar" style="height: 100%; width: 0; background: red;"></div>
          </div>
          <small id="strength-text" style="color: red;">Min 6 characters</small>
          <ul id="password-requirements" style="list-style: none; padding-left: 0;">
            <li id="req-length">â€¢ At least 6 characters</li>
            <li id="req-uppercase">â€¢ One uppercase letter (suggested)</li>
            <li id="req-number">â€¢ One number (suggested)</li>
            <li id="req-special">â€¢ One special character (suggested)</li>
          </ul>
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
      </form>
      <div class="login-link">
        <p class="mb-0">Already have an account? <a href="/login">Login</a></p>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    const passwordInput = document.getElementById('password');
    const strengthBar = document.getElementById('strength-bar');
    const strengthText = document.getElementById('strength-text');
    const reqLength = document.getElementById('req-length');
    const reqUppercase = document.getElementById('req-uppercase');
    const reqNumber = document.getElementById('req-number');
    const reqSpecial = document.getElementById('req-special');

    passwordInput.addEventListener('input', function() {
      const value = passwordInput.value;
      let strength = 0;

      // Check requirements
      if (value.length >= 6) {
        reqLength.style.color = 'green'; strength++;
      } else {
        reqLength.style.color = 'red';
      }
      if (/[A-Z]/.test(value)) {
        reqUppercase.style.color = 'green'; strength++;
      } else {
        reqUppercase.style.color = 'gray';
      }
      if (/\d/.test(value)) {
        reqNumber.style.color = 'green'; strength++;
      } else {
        reqNumber.style.color = 'gray';
      }
      if (/[^A-Za-z0-9]/.test(value)) {
        reqSpecial.style.color = 'green'; strength++;
      } else {
        reqSpecial.style.color = 'gray';
      }

      // Update strength bar and text
      const percent = (strength / 4) * 100;
      strengthBar.style.width = percent + '%';
      if (value.length < 6) {
        strengthBar.style.background = 'red';
        strengthText.textContent = 'Min 6 characters';
        strengthText.style.color = 'red';
      } else if (strength <= 2) {
        strengthBar.style.background = 'orange';
        strengthText.textContent = 'Weak';
        strengthText.style.color = 'orange';
      } else if (strength === 3) {
        strengthBar.style.background = 'yellow';
        strengthText.textContent = 'Medium';
        strengthText.style.color = 'goldenrod';
      } else {
        strengthBar.style.background = 'green';
        strengthText.textContent = 'Strong';
        strengthText.style.color = 'green';
      }
    });
    </script>
  </body>
</html>